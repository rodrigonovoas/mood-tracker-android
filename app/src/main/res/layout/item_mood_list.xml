<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mood"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_three_dots"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:src="@drawable/ic_three_dots"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:padding="8dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <View
            android:id="@+id/view_mood_bar"
            android:layout_width="40dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_mood_happy_status_bar" />

        <ImageView
            android:id="@+id/imv_mood_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_happy_mood"/>

        <TextView
            android:id="@+id/tv_mood_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/eerie_black"
            android:textStyle="bold"
            android:text="01/01" />
    </LinearLayout>
</LinearLayout>