<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:background="@drawable/mood_selector_bg"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imv_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_close_window" />

    <TextView
        android:id="@+id/tv_mood_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="How do you feel?" />

    <EditText
        android:id="@+id/edt_mood_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/quartz"
        app:cornerRadius="16dp"
        app:strokeColor="@color/eerie_black"
        app:strokeWidth="2dp"
        android:textSize="16dp"
        android:text="ADD" />

</LinearLayout>